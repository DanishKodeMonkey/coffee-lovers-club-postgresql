<!DOCTYPE html>
<html>
    <%- include('./partials/head.ejs') %>
    <body>
        <%- include('./partials/header.ejs') %>
        <main class="container mt-5">
            <div class="messages">
                <h1 class="display-4 mb-4">
                    <%= title %> <% if (isAnon) { %> (read only mode)
                </h1>

                <div>
                    <p>Welcome to anonymous read-only mode!</p>
                    <p>How about joining in?</p>
                    <div class="d-flex mt-3 mb-5">
                        <div class="m-1">
                            <a
                                class="btn btn-primary"
                                href="/auth/sign-in"
                                >Already a user? Sign in!</a
                            >
                        </div>
                        <div class="m-1">
                            <a
                                class="btn btn-primary"
                                href="/auth/sign-up"
                                >New user? Sign up today!</a
                            >
                        </div>
                        <% } %>
                    </div>
                </div>
                <hr />
                <% if (!isAnon && userMembership !== 'Guest') { %>
                <button
                    type="button"
                    class="btn btn-primary"
                    data-bs-toggle="modal"
                    data-bs-target="#messageModal"
                >
                    Create new message
                </button>

                <div
                    class="modal fade"
                    id="messageModal"
                    tabindex="-1"
                    aria-labelledby="createmessagemodal"
                    aria-hidden="true"
                >
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <!-- header area of modal -->
                                <h5
                                    class="modal-title"
                                    id="createmessagemodal"
                                >
                                    Create New Message
                                </h5>
                                <button
                                    type="button"
                                    class="btn-close"
                                    data-bs-dismiss="modal"
                                    aria-label="close"
                                ></button>
                            </div>
                            <!-- form area of modal -->
                            <div class="modal-body">
                                <form
                                    action="/messages/create"
                                    method="post"
                                >
                                    <input
                                        type="hidden"
                                        name="author"
                                        value="<%= userId %>"
                                    />
                                    <div class="mb-3">
                                        <label
                                            for="title"
                                            class="form-label"
                                            >Title</label
                                        ><input
                                            type="text"
                                            class="form-control"
                                            id="title"
                                            name="title"
                                            required
                                            maxlength="50"
                                        />
                                    </div>
                                    <div class="mb-3">
                                        <label
                                            for="message"
                                            class="form-label"
                                            >Message</label
                                        ><textarea
                                            name="message"
                                            id="message"
                                            class="form-control"
                                            rows="5"
                                            maxlength="600"
                                        ></textarea>
                                    </div>
                                    <button
                                        type="submit"
                                        class="btn btn-primary"
                                    >
                                        Submit
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <% } %> <% if (!messages.length ) { %>
                <p>No messages found</p>
                <% } else { %>
                <div class="list-group">
                    <% messages.forEach(message => { %>
                    <div class="list-group-item">
                        <h2 class="mb-0"><%= message.title %></h2>
                        <% if (!isAnon) { %>
                        <hr />
                        <p class="mb-1"><%= message.author.username %></p>
                        <% } %>
                        <p class="mb-1">
                            <%= new
                            Date(message.timestamp).toLocaleString('en-GB',
                            {day: 'numeric', month: 'short', year:'numeric',
                            hour: '2-digit', minute: '2-digit',
                            second:'2-digit'}) %>
                        </p>
                        <hr />
                        <p class="mb-1"><%= message.message %></p>
                        <% if (!isAnon) { %>
                        <!-- Display a delete button only to the author or an admin user -->
                        <% if (userId === message.author.id || userMembership
                        === 'Admin') { %>
                        <form
                            action="/messages/<%= message.id %>/delete"
                            method="post"
                            onsubmit="return confirm('Are you sure you want to delete this message?');"
                        >
                            <button
                                type="submit"
                                class="btn btn-danger"
                            >
                                Delete
                            </button>
                        </form>
                        <% } %> <% } %>
                    </div>
                    <% }) %>
                </div>
                <% } %>
            </div>
        </main>
        <%- include('./partials/footer.ejs') %>
    </body>
</html>
